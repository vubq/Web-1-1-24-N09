@{
    var listPageSize = new[] { 10, 20, 50 };
}
@model IEnumerable<Learner>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Mã</th>
            <th>Tên</th>
            <th>Họ</th>
            <th>Ngành</th>
            <th>Ngày Nhập Học</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.LearnerID</td>
                    <td>@s.FirstMidName</td>
                    <td>@s.LastName</td>
                    <td>@s.Major.MajorName</td>
                    <td>@s.EnrollmentDate</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@s.LearnerID">Edit</a>|
                        <a asp-action="Delete" asp-route-id="@s.LearnerID">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6">Không có dữ liệu</td>
            </tr>
        }
    </tbody>
</table>

<div style="display: flex; justify-content: space-between">
    <div class="d-flex">
        <nav aria-label="Page navigation example">
            <ul class="pagination" style="margin-bottom: 0;">
                <li class="page-item @(ViewBag.page == 1 ? "disabled" : "")" style="cursor: pointer;" onclick="previous()">
                    <a class="page-link" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                @for (int i = 1; i <= ViewBag.totalPage; i++)
                {
                    <li class="page-item @(ViewBag.page == i ? "active" : "")" page="@i" style="cursor: pointer;"
                    @(ViewBag.mid != null ? "mid='ViewBag.mid'" : "")
                    @(ViewBag.keyword != null ? "keyword='@ViewBag.keyword'" : "")
                        onclick="changePage(@i)">
                        <a class="page-link">@i</a>
                    </li>
                }
                <li class="page-item @(ViewBag.page == ViewBag.totalPage ? "disabled" : "")" style="cursor: pointer;" onclick="next()">
                    <a class="page-link" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>
        </nav>

        <select id="pageSize" onchange="changePageSize()" total-page="@ViewBag.totalPage" class="form-select ms-2 w-auto">
            @foreach (var ps in listPageSize)
            {
                @if(ps == ViewBag.pageSize)
                {
                    <option value="@ps" selected>@ps</option>
                }
                else
                {
                    <option value="@ps">@ps</option>
                }
            }
        </select>
    </div>
    <div>
        <a asp-action="Create" class="btn btn-primary">Create New Student</a>
    </div>
</div>

